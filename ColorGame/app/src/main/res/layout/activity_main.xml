<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lucho.colorgame.MainActivity">

    <LinearLayout
        android:id="@+id/mainLinearLayoutHeight"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <LinearLayout
            android:id="@+id/mainLinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tvC1"
                android:layout_weight="1"
                android:width="0dp"
                android:height="0dp"
                android:onClick="onClick"
                android:clickable="true"
                android:background="#d50000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tvC2"
                android:layout_weight="1"
                android:width="0dp"
                android:height="0dp"
                android:onClick="onClick"
                android:clickable="true"
                android:background="#a1887f" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tvC3"
                android:layout_weight="1"
                android:width="0dp"
                android:height="0dp"
                android:onClick="onClick"
                android:clickable="true"
                android:background="#304ffe" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainLinearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tvC4"
                android:layout_weight="1"
                android:width="0dp"
                android:height="0dp"
                android:onClick="onClick"
                android:clickable="true"
                android:background="#4caf50" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tvC5"
                android:layout_weight="1"
                android:width="0dp"
                android:height="0dp"
                android:onClick="onClick"
                android:clickable="true"
                android:background="#424242" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tvC6"
                android:layout_weight="1"
                android:width="0dp"
                android:height="0dp"
                android:onClick="onClick"
                android:clickable="true"
                android:background="#ffd600" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainLinearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tvC7"
                android:layout_weight="1"
                android:width="0dp"
                android:height="0dp"
                android:onClick="onClick"
                android:clickable="true"
                android:background="#7986cb" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tvC8"
                android:layout_weight="1"
                android:width="0dp"
                android:height="0dp"
                android:onClick="onClick"
                android:clickable="true"
                android:background="#9c27b0" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tvC9"
                android:layout_weight="1"
                android:width="0dp"
                android:height="0dp"
                android:onClick="onClick"
                android:clickable="true"
                android:background="#4dd0e1" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mainLinearLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tvC10"
                android:layout_weight="1"
                android:width="0dp"
                android:height="0dp"
                android:onClick="onClick"
                android:clickable="true"
                android:background="#c0ca33" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tvC11"
                android:layout_weight="1"
                android:width="0dp"
                android:height="0dp"
                android:onClick="onClick"
                android:clickable="true"
                android:background="#424242" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tvC12"
                android:layout_weight="1"
                android:width="0dp"
                android:height="0dp"
                android:onClick="onClick"
                android:clickable="true"
                android:background="#000000" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:gravity="center"
        android:id="@+id/tvTitleApp"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/tvHighScore"
        android:layout_centerHorizontal="true"
        android:background="@drawable/title2small" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonStartGame"
        android:background="@drawable/strt_btn"
        android:drawableLeft="@drawable/arrow_right"
        android:drawableStart="@drawable/arrow_right"
        android:textSize="40sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="328dp"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="35sp"
        android:gravity="center"
        android:text="High Score: 0"
        android:id="@+id/tvHighScore"
        android:layout_marginTop="48dp"
        android:textColor="#000000"
        android:shadowColor="#ffffff"
        android:shadowDx="4"
        android:shadowDy="-4"
        android:shadowRadius="1"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="i"
        android:id="@+id/infoButton"
        android:layout_above="@+id/tvTitleApp"
        android:layout_toRightOf="@+id/tvHighScore"
        android:layout_toEndOf="@+id/tvHighScore"
        android:background="@drawable/info_btn"
        android:layout_marginLeft="25dp" />

</RelativeLayout>
